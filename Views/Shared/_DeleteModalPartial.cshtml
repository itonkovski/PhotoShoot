<div class="modal" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p>Do you want to delete this item?</p>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-secondary" form="deleteForm">Yes</button>
                <button type="submit" class="btn btn-dark" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<form method="post" asp-controller="Images" asp-action="Delete" id="deleteForm" class="ml-2">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" id="imageId" />
</form>